<%- include('index'); %>

<h2>Dodaj issue</h2>
<form action="/addIssue" method="POST">
    <div>
        <label for="projectName">Project Name</label>
        <select name="projectName" id="projectName">
            <% projects.forEach(function(project){ %>
                <option value="<%= project.projectName %>"><%= project.projectName %></option>
            <% }); %>
        </select>
    </div>
    <div>
        <label for="issueName">Issue Name</label>
        <input type="text" id="issueName" name="issueName" required>
    </div>
    <div>
        <input type="radio" id="Open"
         name="issueStatus" value="Open" checked>
        <label for="Open">Open</label>
  
        <input type="radio" id="In Progress"
         name="issueStatus" value="In Progress">
        <label for="In Progress">In Progress</label>
  
        <input type="radio" id="Closed"
         name="issueStatus" value="Closed">
        <label for="Closed">Closed</label>
    </div>
    <div>
        <label for="issueNickname">Assignee</label>
        <select name="issueNickname" id="issueNickname">
            <% users.forEach(function(user){ %>
                <option value="<%= user.nickname %>"><%= user.nickname %></option>
            <% }); %>
        </select>
    </div>
    <button type="submit">Submit</button>
</form>